<h1>Add a Comment</h1>
<%= form_for [@item, @comment] do |f| %>
  <%= f.label :body %>
  <%= f.text_area :body, required: true %>
  <br />
  <%= f.label :author %>
  <%= f.text_field :author, placeholder: 'Hide in Anonymity' %>
  <br />
  <%= f.submit %>
<% end %>
<%= link_to 'Back to items', department_item_path(@item.department_id, @item) %>